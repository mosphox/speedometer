#:import math math

<FigureLabel>:
    
    FloatLayout:

        size_hint: None, None

        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size: min(root.size) * 0.9, min(root.size) * 0.9

        Label:

            text: root.label_text

            pos_hint: {"center_x": 0.5 + 0.38 * math.sin(25.2 * root.label_pos * math.pi / 180), "center_y": 0.5 + 0.388 * math.cos(25.2 * root.label_pos * math.pi / 180)}

            font_size: min(root.size) / 12
            font_name: "assets\\font.ttf"

            color: root.label_color

<Lines>:

    FloatLayout:

        size_hint: None, None

        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size: min(root.size) * 0.9, min(root.size) * 0.9

        canvas:

            Color:
                rgb: root.color

            SmoothLine:
                points: self.center_x + root.length * min(root.size) * root.radius / 2 * math.sin((root.value - root.corrector) * root.angle * math.pi / 180), self.center_y + root.length * min(root.size) * root.radius / 2 * math.cos((root.value - root.corrector) * root.angle * math.pi / 180), self.center_x + 1 * min(root.size) * root.radius / 2 * math.sin((root.value - root.corrector) * root.angle * math.pi / 180), self.center_y + 1 * min(root.size) * root.radius / 2 * math.cos((root.value - root.corrector) * root.angle * math.pi / 180)

                width: min(root.size) / 250

<Circle>:
    
    FloatLayout:

        size_hint: None, None

        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size: min(root.size) * root.multiplier, min(root.size) * root.multiplier

        canvas:

            Color:
                rgb: root.color

            Ellipse:
                size: self.size
                pos: self.pos

<WatchFace>:
    face: face
    ticks: ticks

    FloatLayout:
        id: face

        size_hint: None, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size: min(root.size) * 0.9, min(root.size) * 0.9

        canvas:

            Color:
                rgb: 0, 0, 0

            Ellipse:
                size: self.size
                pos: self.pos

        Label:
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.28}
            size: min(root.size) * 0.9, min(root.size) * 0.9

            text: "%"
            font_size: min(root.size) / 10
            font_name: "assets\\font.ttf"

        Label:
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.18}
            size: min(root.size) * 0.9, min(root.size) * 0.9

            text: "CPU utilization"
            font_size: min(root.size) / 20
            font_name: "assets\\font_2.ttf"
            color: 200 / 255, 60 / 255, 60 / 255

        Label:
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            size: min(root.size) * 0.9, min(root.size) * 0.9

            text: "Physical RAM used" + root.getram()
            font_size: min(root.size) / 20
            font_name: "assets\\font_2.ttf"
            color: 60 / 255, 60 / 255, 200 / 255

        Label:
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.06}
            size: min(root.size) * 0.9, min(root.size) * 0.9

            text: "Disk space used" + root.getdisk()
            font_size: min(root.size) / 20
            font_name: "assets\\font_2.ttf"
            color: 200 / 255, 200 / 255, 60 / 255

    Ticks:
        id: ticks
        radius: min(root.size) * 0.9 / 2